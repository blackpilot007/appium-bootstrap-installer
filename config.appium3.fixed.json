{
  "installFolder": "${USERPROFILE}/AppiumBootstrap3",
  "nodeVersion": "22",
  "appiumVersion": "3.0.0",
  "nvmVersion": "0.40.1",
  "cleanInstallFolder": false,

  "drivers": [
    { "name": "xcuitest", "version": "10.11.0", "enabled": true },
    { "name": "uiautomator2", "version": "4.1.0", "enabled": true },
    { "name": "espresso", "version": "3.0.0", "enabled": false },
    { "name": "flutter", "version": "3.0.0", "enabled": false },
    { "name": "safari", "version": "4.0.0", "enabled": false }
  ],

  "plugins": [
    { "id": "images", "name": "images", "version": "3.0.5", "enabled": true, "restartPolicy": "OnFailure" },
    { "id": "relaxed-caps", "name": "relaxed-caps", "version": "3.0.0", "enabled": true, "restartPolicy": "Never" },
    { "id": "element-wait", "name": "element-wait", "version": "4.0.0", "enabled": false },
    { "id": "execute-driver", "name": "execute-driver", "version": "3.0.0", "enabled": false },
    {
      "id": "device-provisioner",
      "name": "device-provisioner",
      "type": "script",
      "runtime": "powershell",
      "executable": "${INSTALL_FOLDER}\\Platform\\Windows\\Scripts\\provision-device.ps1",
      "arguments": ["-DeviceId", "{deviceId}"],
      "enabled": false,
      "triggerOn": "device-connected",
      "stopOnDisconnect": true,
      "restartPolicy": "OnFailure",
      "healthCheckCommand": "${INSTALL_FOLDER}\\Platform\\Windows\\Scripts\\provision-device.ps1",
      "healthCheckArguments": ["-DeviceId", "{deviceId}"],
      "healthCheckTimeoutSeconds": 5
    },
    {
      "id": "startup-check",
      "name": "startup-check",
      "type": "script",
      "runtime": "bash",
      "executable": "${INSTALL_FOLDER}/Platform/Linux/Scripts/check_startup.sh",
      "arguments": [],
      "enabled": false
    }
  ],

  "pluginMonitorIntervalSeconds": 10,
  "pluginRestartBackoffSeconds": 5,
  "healthCheckTimeoutSeconds": 5,

  "enableDeviceListener": true,
  "deviceListenerPollInterval": 5,
  "autoStartAppium": true,
  "prebuiltWdaPath": "",
  "deviceRegistry": { "enabled": true, "filePath": "device-registry.json", "autoSave": true, "saveIntervalSeconds": 30 },

  "platformSpecific": {
    "macOS": { "libimobiledeviceVersion": "latest" },
    "windows": { "installIOSSupport": true, "installAndroidSupport": true, "nvmVersion": "1.1.12" },
    "linux": { "installIOSSupport": true, "installAndroidSupport": true }
  }
}
