{
    "installFolder": "${USERPROFILE}/AppiumBootstrap",
    "nodeVersion": "22",
    "appiumVersion": "2.17.1",
    "nvmVersion": "0.40.1",
    "drivers": [
        {
            "name": "xcuitest",
            "version": "7.24.3",
            "enabled": true
        },
        {
            "name": "uiautomator2",
            "version": "3.8.3",
            "enabled": true
        },
        {
            "name": "espresso",
            "version": "2.44.0",
            "enabled": false
        },
        {
            "name": "flutter",
            "version": "2.8.1",
            "enabled": false
        },
        {
            "name": "safari",
            "version": "3.7.3",
            "enabled": false
        },
        {
            "name": "gecko",
            "version": "0.33.0",
            "enabled": false
        }
    ],
    "plugins": [
        {
            "id": "device-farm",
            "name": "device-farm",
            "version": "8.3.5",
            "enabled": true
        },
        {
            "id": "dashboard",
            "name": "dashboard",
            "version": "2.0.3",
            "enabled": true
        },
        {
            "id": "images",
            "name": "images",
            "version": "2.1.7",
            "enabled": false
        },
        {
            "id": "relaxed-caps",
            "name": "relaxed-caps",
            "version": "2.0.0",
            "enabled": false
        },
        {
            "id": "element-wait",
            "name": "element-wait",
            "version": "3.0.2",
            "enabled": false
        },
        {
            "id": "execute-driver",
            "name": "execute-driver",
            "version": "2.1.4",
            "enabled": false
        }
    ],
    "enableDeviceListener": false,
    "deviceListenerPollInterval": 5,
    "autoStartAppium": true,
    "prebuiltWdaPath": "",
    "deviceRegistry": {
        "enabled": true,
        "filePath": "device-registry.json",
        "autoSave": true,
        "saveIntervalSeconds": 30
    },
    "platformSpecific": {
        "macOS": {
            "libimobiledeviceVersion": "latest"
        },
        "windows": {
            "installIOSSupport": true,
            "installAndroidSupport": true,
            "nvmVersion": "1.1.12"
        },
        "linux": {
            "installIOSSupport": true,
            "installAndroidSupport": true
        }
    }
}